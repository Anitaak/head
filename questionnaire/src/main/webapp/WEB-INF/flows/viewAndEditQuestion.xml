<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="questionDetail" class="org.mifos.platform.questionnaire.ui.model.Question"/>

    <view-state id="viewQuestionDetail">
        <on-entry>
            <evaluate expression="questionnaireServiceFacade.getQuestionDetail(requestParameters.questionId)" result="questionDetail.questionDetail"/>
        </on-entry>
		<transition on="editQuestion" to="editQuestion"/>
    </view-state>

    <view-state id="editQuestion">
    </view-state>

</flow>