<assembly>
    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory/>
            <directory>${basedir}/..</directory>
            <includes>
                <include>LICENSE*</include>
                <include>INSTALL*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>db</outputDirectory>
            <directory>../db</directory>
            <includes>
                <include>src/main/resources/liquibase.properties</include>
                <include>src/main/changesets/*.xml</include>
                <include>src/main/sql/*.sql</include>
                <include>deploy/**/*.*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../appdomain/target/applicationConfiguration.custom.properties</source>
            <outputDirectory>config</outputDirectory>
        </file>
        <file>
            <source>release/example_local.properties</source>
            <outputDirectory>config</outputDirectory>
            <destName>local.properties</destName>
        </file>
        <file>
            <source>target/mifos-webapp.war</source>
            <outputDirectory/>
            <destName>mifos.war</destName>
        </file>
        <file>
            <source>release/install-ubuntu.sh</source>
            <outputDirectory/>
        </file>
    </files>
</assembly>
