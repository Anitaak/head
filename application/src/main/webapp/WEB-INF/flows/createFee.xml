<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!--   <secured attributes="ROLE_USER" /> -->


	<!--  <input name="hotelId" required="true" />  
	-->
	
	<var name="feeDefintion" class="org.mifos.accounts.fees.struts.actionforms.FeeActionForm"/>
	<on-start>
	   <evaluate expression="externalContext.sessionMap.get('UserContext').localeId" result ="flowScope.localeId" />
	   <evaluate expression="feeServiceFacade.getFeeParameters(flowScope.localeId)" result ="flowScope.FeeParameters" />
	</on-start>
	
	<view-state id="defineFee" model="feeDefintion">
		<transition on="preview" to="previewFee" />
		<transition on="cancel" to="cancel" bind="false" history="discard"/>
	</view-state>
	
	<view-state id="previewFee" model="feeDefintion">
		<transition on="proceed" to="createFeeDefinition" />
		<transition on="cancel" to="cancel" bind="false" history="discard"/>
	</view-state>
	
	<action-state id="createFeeDefinition">
		<evaluate expression="feeController.createFee(feeDefintion, flowRequestContext)" />
		<transition on="feeDefinitionSuccess" to="feeDefinitionSuccess" />
		<transition on="feeDefinitionFailure" to="defineFee" />
	</action-state>
	
	<end-state id="feeDefinitionSuccess" />

	<end-state id="cancel" view="externalRedirect:AdminAction.do" />

</flow>
