<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="customMessageFormBean" class="org.mifos.ui.core.controller.CustomMessageFormBean" />
    <var name="customMessageSelectFormBean" class="org.mifos.ui.core.controller.CustomMessageSelectFormBean" />

    <view-state id="selectCustomMessageStep" view="customMessagesView" model="customMessageSelectFormBean">
        <on-entry>
            <evaluate expression="customizeMessagesController.retrieveCustomMessagesMap()" result="flowScope.customMessagesMap" />
        </on-entry>    
        <transition on="add" to="addCustomMessageStep" validate="false" bind="false"/>
        <transition on="remove" to="selectCustomMessageStep">
            <evaluate expression="customizeMessagesController.removeCustomMessage(customMessageSelectFormBean)" />        
        </transition>
        <transition on="edit" to="editCustomMessageStep">
            <evaluate expression="customizeMessagesController.getCustomMessage(customMessageSelectFormBean)" result="flowScope.customMessage"/>        
        </transition>
        <transition on="done" to="done" validate="false" bind="false" history="invalidate"/>
    </view-state>

    <view-state id="addCustomMessageStep" view="customMessagesAdd" model="customMessageFormBean">
        <transition on="add" to="selectCustomMessageStep" >
            <evaluate expression="customizeMessagesController.addOrUpdateCustomMessage(customMessageFormBean)" />
        </transition>
        
        <transition on="cancel" to="selectCustomMessageStep" validate="false" bind="false"/>
    </view-state>

    <view-state id="editCustomMessageStep" view="customMessagesEdit" model="customMessageFormBean">
        <on-entry>
            <evaluate expression="customMessageFormBean.setOldMessage(customMessage.getOldMessage())" />
            <evaluate expression="customMessageFormBean.setNewMessage(customMessage.getNewMessage())" />
        </on-entry>    

        <transition on="submit" to="selectCustomMessageStep" >
            <evaluate expression="customizeMessagesController.addOrUpdateCustomMessage(customMessageFormBean)" />
        </transition>
        
        <transition on="cancel" to="selectCustomMessageStep" validate="false" bind="false"/>
    </view-state>        
    <end-state id="done" view="externalRedirect:contextRelative:/AdminAction.do?method=load"/>
</flow>
