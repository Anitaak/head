<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
      
    <var name="loanAccountQuestionGroupFormBean" class="org.mifos.clientportfolio.loan.ui.LoanAccountQuestionGroupFormBean" />
    <var name="loanAccountStatusFormBean" class="org.mifos.clientportfolio.loan.ui.LoanAccountStatusFormBean" />
    
	<view-state id="editStatusStep" view="editLoanAccountStatusEnterDetails" model="loanAccountStatusFormBean">
		<on-entry>
			<evaluate expression="loanAccountStatusController.loadAccount(requestParameters.globalAccountNumber, loanAccountStatusFormBean)" />
		</on-entry>
		<transition on="detailsEntered" to="checkIfLoanApproved" />
	</view-state>

	<decision-state id="checkIfLoanApproved">
		<if test="loanAccountStatusFormBean.isLoanApproved()" then="checkIfQuestionGroupsExistForLoanApproval" else="previewStep" />
	</decision-state>
		
    <decision-state id="checkIfQuestionGroupsExistForLoanApproval">
        <on-entry>
            <evaluate expression="loanAccountStatusController.loadQuestionGroups(loanAccountStatusFormBean.getStatus(), loanAccountQuestionGroupFormBean)"/>
        </on-entry>
        <if test="loanAccountQuestionGroupFormBean.questionGroups.size() > 0" then="answerQuestionGroupStep" else="previewStep"/>
    </decision-state>
	
    <view-state id="answerQuestionGroupStep" view="editLoanAccountStatusQuestionnaire" model="loanAccountQuestionGroupFormBean">
        <transition on="questionsAnswered" to="previewStep" />
    </view-state>
	
	<view-state id="previewStep" view="editLoanAccountStatusPreview">
		<transition on="save" to="complete">
            <evaluate expression="loanAccountStatusController.updateStatus(loanAccountStatusFormBean)" result="flowScope.account" />
		</transition>
		<transition on="edit" to="editStatusStep" />
	</view-state>
	
    <end-state id="complete" view="editLoanAccountStatusComplete" />
	
</flow>