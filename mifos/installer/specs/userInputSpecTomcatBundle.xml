<userInput>

        <!-- Panel Order "0" is called for the Installer where Tomcat is Bundling  -->
        <panel order="0">
                <field type="dir" align="left" variable="catalina.home">
                        <spec txt="Please select directory to install Tomcat: " id="tomcat.dirctory" size="25"  set=""/>
                </field>
        </panel>

        <!-- Panel Order "3" is called if the user want to work with the Mifos Database
        This Panel Order = 3 shouldnot be changed, If changed, then the variable values for 
        ( private static int instanceCount = 3; ) and ( protected int instanceNumber = 3; ) should also be changed in the DatabaseUserInputPanel.java
        which is at the path \installer\src\com\izforge\izpack\panels.  -->
        <panel order="3">
                <field type="staticText" align="left" txt="Please enter the database connection properties." id="db.details.msg"/>
                
                <field type="space"/>
                
                <field type="text" align="left" variable="db.host">
                        <spec txt="Database Server:" id="db.server" size="25" set="localhost"/>
                        <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Please enter Database server host." id="db.server.msg"/>
                </field>
                
                <field type="text" align="left" variable="db.port">
                        <spec txt="Port:" id="db.port" size="25" set="3306"/>
                        <validator class="com.izforge.izpack.util.IsPortValidator" txt="Please enter Port." id="db.port.msg"/>
                </field>
                
                <field type="text" align="left" variable="db.schema">
                        <spec txt="Database Name:" id="db.schema" size="25" set="mifos"/>
                        <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Please enter database name." id="db.schema.msg"/>
                </field>
                
                <field type="text" align="left" variable="db.user">
                        <spec txt="User name:" id="db.user" size="25" set="root"/>
                        <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Please enter User Name." id="db.user.msg"/>
                </field>
                
                <field type="password" align="left" variable="db.password">
                        <spec>
                                <pwd txt="Password:" id="db.password" size="25" set=""/>
                        </spec>
                        <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="Please enter password." id="db.password.msg"/>
                </field>
                
                <field type="space"/>
                
                <field type="staticText" align="left" txt="Note: If the database name above exists, it will be dropped and recreated with latest Mifos database." id="schema.exist.msg"/>
        </panel>
</userInput>