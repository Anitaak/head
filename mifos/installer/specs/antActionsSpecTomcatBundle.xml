<?xml version="1.0" encoding="iso-8859-1"  ?>
<antactions> 
 <!-- Pack for the Mifos Database If Tomcat Bundle  -->
 <pack name="Mifos Database">
         <antcall buildfile="build/build-database-tomcatbundle.xml" order="afterpacks">
                 <target name="build_db"/>
                 <property name="db.host" value="$db.host"/>
                 <property name="db.port" value="$db.port"/>
                 <property name="db.user" value="$db.user"/>
                 <property name="db.password" value="$db.password"/>
                 <property name="db.schema" value="$db.schema"/>
         </antcall>

         <antcall buildfile="build/build-database-tomcatbundle.xml" order="afterpacks">
                 <target name="update_hibernate_props"/>
                 <property name="db.host" value="$db.host"/>
                 <property name="db.port" value="$db.port"/>
                 <property name="db.user" value="$db.user"/>
                 <property name="db.password" value="$db.password"/>
                 <property name="db.schema" value="$db.schema"/>
                 <property name="catalina.home" value="$catalina.home"/>
         </antcall>
         
         <antcall buildfile="build/build-database-tomcatbundle.xml" order="afterpacks">
                 <target name="del"/>
         </antcall>
   </pack>
 
   <!-- Pack for choosing Tomcat allready installed on the computer or not. Displays the radio buttons  -->
   <pack name="TomcatBundle">
           <antcall buildfile="bundle/tomcat-bundle.xml" order="afterpack">
                <target name="copy-tomcat"/>
                <property name="catalina.home" value="$catalina.home"/>
        </antcall>

        <antcall buildfile="bundle/tomcat-bundle.xml" order="afterpacks">
                <target name="delete-bundle"/>
        </antcall>
   </pack>

   
   <!-- Pack to restart tomcat if Tomcat is not allready installed on the Target Computer  -->
   <pack name="Mifos Application">
        <antcall buildfile="tomcatrestart/tomcat-restart.xml" order="afterpacks">
                <target name="tomcat-stop"/>
                <property name="catalina.home" value="$catalina.home/apache-tomcat-6.0.16" />
        </antcall>   
        
        <antcall buildfile="tomcatrestart/tomcat-restart.xml" order="afterpacks">
               <target name="tomcat-start"/>
                <property name="catalina.home" value="$catalina.home/apache-tomcat-6.0.16" />
        </antcall>
        
        <antcall buildfile="tomcatrestart/tomcat-restart.xml" order="afterpacks">
                <target name="delete-tomcat-restart"/>
        </antcall>
   </pack>

</antactions>  
   