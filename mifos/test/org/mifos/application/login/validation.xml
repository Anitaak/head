<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
	<form name="/loginAction">
			<field property="userName" depends="required">
				<msg name="required" key="errors.mandatory"
					bundle="LoginUIResources" />
				<arg key="login.username" bundle="LoginUIResources" />
			</field>
			<field property="password" depends="validwhen">
				<msg name="validwhen" key="errors.mandatory"
					bundle="LoginUIResources" />
				<arg key="login.password" bundle="LoginUIResources" />
				<var>
					<var-name>test</var-name>
					<var-value>
						((input != null) or (*this* != null))
					</var-value>
				</var>
			</field>
			<field property="oldPassword" depends="validwhen">
				<msg name="validwhen" key="errors.mandatory"
					bundle="LoginUIResources" />
				<arg key="login.oldpassword" bundle="LoginUIResources" />
				<var>
					<var-name>test</var-name>
					<var-value>((input == null) or (*this* != null))</var-value>
				</var>
			</field>
			<field property="newPassword"
				depends="validwhen,minlength,maxlength,mask">
				<msg name="validwhen" key="errors.newconfpassword"
					bundle="LoginUIResources" />
				<msg name="maxlength" key="errors.maximumlength"
					bundle="LoginUIResources" />
				<msg name="minlength" key="errors.minimumlength"
					bundle="LoginUIResources" />
				<msg name="mask" key="errors.spacemask"
					bundle="LoginUIResources" />
				<arg0 key="login.newpassword" />
				<arg1 name="minlength" key="${var:minlength}"
					resource="false" />
				<arg1 name="maxlength" key="${var:maxlength}"
					resource="false" />
				<var>
					<var-name>test</var-name>
					<var-value>((input == null) or ((*this* != null) and (*this*==confirmPassword)))</var-value>
				</var>
				<var>
					<var-name>minlength</var-name>
					<var-value>6</var-value>
				</var>
				<var>
					<var-name>maxlength</var-name>
					<var-value>20</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^[^ ]*$</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>
