<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
<formset>
		<!-- Person Action-->
		<form name="/PersonAction">
        	<!-- First Name -->
         	<field property="firstName" depends="required,maxlength">
	         	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.FirstNameLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>100</var-value>
				</var>
				
			</field>
			<!-- Middle Name -->
			<field property="middleName" depends="maxlength">
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.MiddleNameLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>100</var-value>
				</var>
			</field>
			<!-- Second Last Name -->
			<field property="secondLastName" depends="maxlength">
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.SecondLastNameLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>100</var-value>
				</var>
			</field>
			<!-- Last Name -->
         	<field property="lastName" depends="required,maxlength">
	         	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.LastNameLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>100</var-value>
				</var>
			</field>
			
			<!-- Govt. Id Number -->
			<field property="governmentIdNumber" depends="maxlength">
			<!-- 	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>-->
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.GovtIdNumLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>50</var-value>
				</var>
			</field>
			
			<!-- E-Mail -->
         	<field property="emailId" depends="email,maxlength">
	         	<msg name="email" key="errors.validvalue"  bundle="PersonnelUIResources"/>
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.EmailLabel" />
				<arg1 name="email" key="Personnel.EmailAddress" />
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>200</var-value>
				</var>
			</field>
			
			<!-- DOB -->
			<field property="dob" depends="validwhen">
	         	<msg name="validwhen" key="errors.mandatory"  bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.DOBLabel" />
				<var>
	         		<var-name>test</var-name>
          		 	<var-value>((input != "CreateUser") or (*this* != null))</var-value>
		        </var>
			</field>
			<!-- Gender -->
			<field property="gender" depends="required">
	         	<msg name="required" key="errors.mandatorySelect"  bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.GenderLabel" />
			</field>
			
			<!-- Address 1 -->
         	<field property="address.line1" depends="maxlength">
	         <!-- 	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>-->
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.Address1Label" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>200</var-value>
				</var>
			</field>
			
			<!-- Address 2 -->
         	<field property="address.line2" depends="maxlength">
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.Address2Label" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>200</var-value>
				</var>
			</field>

			<!-- Address 3 -->
         	<field property="address.line3" depends="maxlength">
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.Address3Label" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>200</var-value>
				</var>
			</field>

			<!-- City -->
         	<field property="address.city" depends="maxlength">
	         <!--	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>-->
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.CityLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>100</var-value>
				</var>
			</field>			

			<!-- State -->
         	<field property="address.state" depends="maxlength">
	      <!--   	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>-->
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.StateLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>100</var-value>
				</var>
			</field>			

			<!-- Country -->
         	<field property="address.country" depends="maxlength">
	        <!-- 	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>-->
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.CountryLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>100</var-value>
				</var>
			</field>	
					
			<!-- Postal Code -->
         	<field property="address.zip" depends="maxlength">
	        <!-- 	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>-->
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.PostalCodeLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>20</var-value>
				</var>
			</field>

			<!-- Telephone -->
         	<field property="address.phoneNumber" depends="maxlength">
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.TelephoneLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>20</var-value>
				</var>
			</field>
			<!-- Office -->
			<field property="officeId" depends="validwhen">
	         	<msg name="validwhen" key="errors.mandatorySelect"  bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.OfficeLabel" />
				<var>
	         		<var-name>test</var-name>
          		 	<var-value>((input != "ManageUser") or (*this* !=null) )</var-value>
		        </var>
			</field>
			<!-- User Hierarchy -->
			<field property="level" depends="required">
	         	<msg name="required" key="errors.mandatorySelect"  bundle="PersonnelUIResources"/>
				<arg0 key="Personnel.UserHierarchyLabel" />
			</field>
			
			<!-- User Name -->
         	<field property="loginName" depends="required,maxlength,mask">
	         	<msg name="required" key="errors.mandatory"  bundle="PersonnelUIResources"/>
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
	         	<msg name="mask" key="errors.spacesmask"	bundle="PersonnelUIResources" />
				<arg0 key="Personnel.UserNameLabel" />
				<arg1 key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>20</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^[^ ]*$</var-value>
				</var>
			</field>
			
			<!-- Password -->
         	<field property="userPassword" depends="minlength,maxlength,mask">
	         	<!--  <msg name="validwhen" key="errors.validpassword"  bundle="PersonnelUIResources"/>-->
	         	<msg name="minlength" key="errors.minlength"  bundle="PersonnelUIResources"/>
	         	<msg  name="maxlength"  key="errors.maxlength" bundle="PersonnelUIResources"/>
	         	<msg name="mask" key="errors.spacesmask"	bundle="PersonnelUIResources" />
	         	
				<arg0 key="Personnel.PasswordLabel" />
				<arg1 name="minlength" key="${var:minlength}" resource="false"/>
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
  				 	<var-name>minlength</var-name>
			 		<var-value>6</var-value>
				</var>
				<var>
  				 	<var-name>maxlength</var-name>
			 		<var-value>20</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^[^ ]*$</var-value>
				</var>
				<!-- <var>
	         		<var-name>test</var-name>
          		 	<var-value>(((input == "CreateUser") and ((*this* != null) and (*this*==passwordRepeat))) or (input=="updateSettings"))</var-value>
		        </var> -->
			</field>
			
		</form>
		<!-- Person Action Ends-->
		</formset>
</form-validation>
