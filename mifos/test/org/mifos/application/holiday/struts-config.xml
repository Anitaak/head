<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
"http://jakarta.apache.org/struts/dtdt/struts-config_1_2.dtd">
<struts-config>
	<form-beans>
		<form-bean name="HolidayActionForm" type="org.mifos.application.holiday.struts.actionforms.HolidayActionForm" />
	</form-beans>
	<global-exceptions>
		<exception type="org.mifos.framework.exceptions.SystemException" handler="org.mifos.framework.exceptions.MifosExceptionHandler" key="exception.framework.SystemException" scope="request" path="/pages/framework/jsp/error.jsp" />
		<exception type="org.mifos.framework.exceptions.ApplicationException" handler="org.mifos.framework.exceptions.MifosExceptionHandler" key="exception.framework.ApplicationException" scope="request" />
		<exception type="org.mifos.framework.exceptions.PageExpiredException" handler="org.mifos.framework.exceptions.MifosExceptionHandler" key="exception.framework.PageExpiredException" scope="request" path="/pages/framework/jsp/pageexpirederror.jsp" />
		<exception type="org.mifos.framework.exceptions.ConnectionNotFoundException" handler="org.mifos.framework.exceptions.MifosExceptionHandler" key="exception.framework.ConnectionNotFoundException" scope="request" path="/pages/framework/jsp/error.jsp" />
		<exception type="org.mifos.framework.exceptions.ServiceUnavailableException" handler="org.mifos.framework.exceptions.MifosExceptionHandler" key="exception.framework.ServiceUnavailableException" scope="request" path="/pages/framework/jsp/error.jsp" />
	</global-exceptions>
	<global-forwards>
		<forward name="welcome" path="/loginAction.do?method=load" />
		<forward name="load_main_page" path="/pages/application/login/jsp/login.jsp"></forward>
	</global-forwards>	
	<action-mappings>
		<action path="/holidayAction" type="org.mifos.application.holiday.struts.action.HolidayAction" parameter="method"
   	      		scope="session" name="holidayActionForm" validate="true" input="/holidayAction.do?method=validate">
			<!--forward name="previous_success" path="/pages/application/holiday/jsp/create_holiday.jsp" /-->
		    <forward name="create_success" path="/pages/application/admin/jsp/admin.jsp" />
		 	<forward name="cancelCreate_success" path="/AdminAction.do?method=load" />
				
		 	<forward name="manage_success" path="/pages/application/holiday/jsp/manage_holiday.jsp" />
		 	<forward name="managepreview_success" path="/pages/application/holiday/jsp/editPreview_holiday.jsp" />
		 	<forward name="managePreview_failure" path="/pages/application/holiday/jsp/manage_holiday.jsp" />
		 	<forward name="manageprevious_success" path="/pages/application/holiday/jsp/manage_holiday.jsp" />
		 	<forward name="cancelEdit_success" path="/holidayAction.do?method=get" />
		 	<forward name="get_failure" path="/pages/application/holiday/jsp/view_holiday.jsp" />
		 	<forward name="loadAllHoliday_success" path="/pages/application/holiday/jsp/viewOfficesHolidays.jsp" /> 
		 	<forward name="loadAllHoliday_failure" path="/AdminAction.do?method=load" />
				
		 	<forward name="view_organizational_holidays" path="/pages/application/holiday/jsp/view_organizational_holidays.jsp" />
		 	<forward name="create_office_holiday" path="/pages/application/holiday/jsp/create_officeHoliday.jsp" />
		 	<forward name="previous_success" path="/pages/application/holiday/jsp/create_officeHoliday.jsp" />
		 	<forward name="preview_success" path="/pages/application/holiday/jsp/Review_holidayCreation.jsp"/>
		 	<forward name="preview_failure" path="/pages/application/holiday/jsp/create_officeHoliday.jsp" />
		 	<forward name="update_success" path="/holidayAction.do?method=get" />
		 	<forward name="get_success" path="/pages/application/holiday/jsp/view_organizational_holidays.jsp" />
		 	<forward name="load_success" path="/pages/application/holiday/jsp/create_officeHoliday.jsp" />
		</action>
	</action-mappings>
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="org/mifos/application/holiday/validation.xml,org/mifos/application/holiday/validator-rules.xml" />
		<set-property property="stopOnFirstError" value="false" />
	</plug-in>
	<!-- Holiday resources -->
	<message-resources key="holidayUIResources" parameter="org.mifos.application.holiday.util.resources.HolidayUIResources" />
</struts-config>
