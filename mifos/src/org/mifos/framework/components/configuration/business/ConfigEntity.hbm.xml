<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


	<hibernate-mapping>

	    <class name="org.mifos.framework.components.configuration.business.ConfigEntity" table="SYSTEM_CONFIGURATION">
			 <id name="systemConfigId" column="OFFICE_ID">
		        <generator class="foreign">
		            <param name="property">office</param>
		        </generator>
		    </id>
			<one-to-one name="office" class="org.mifos.application.office.business.OfficeBO" constrained="false"/>	 
	        <property name="sessionTimeOut" column="SESSION_TIME_OUT" type="short" />
	        <property name="scheduleMeetingOnHoliday" column="SCHEDULE_MEETING_ON_HOLIDAY" type="string" />
	        <property name="daysForCalDefinition" column="DAYS_FOR_CAL_DEFINITION" type="short" />
	        <property name="nameSequence" column="NAME_SEQUENCE" type="string" />
			<property name="backDatedTrxnAllowed" column="BACK_DATED_TXN_ALLOWED" type="short" />
	        <property name="centerHierarchyExist" column="CENTER_HIERARCHY_EXIST" type="short" />
	        <property name="groupCanApplyLoans" column="GROUP_CAN_APPLY_LOANS" type="short" />
	        <property name="clientCanExistOutsideGroup" column="CLIENT_CAN_EXIST_OUTSIDE_GROUP" type="short" />
		    <property name="noOfInterestDays" column="NO_OF_INTEREST_DAYS" type="short" />	     																																															  
	     </class>
  <query name="getSystemConfig"><![CDATA[select new ConfigEntity(config.sessionTimeOut) from org.mifos.framework.components.configuration.business.ConfigEntity config where config.office.officeId is null]]></query>
  <query name="getOfficeConfig"><![CDATA[from org.mifos.framework.components.configuration.business.ConfigEntity config where config.office.officeId is not null]]></query>
   </hibernate-mapping>
