<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<description>
		This is an open source project on micro-finance
	</description>
	<display-name>MiFosApplication</display-name>
	<servlet>
		<servlet-name>reportTemplateDownload</servlet-name>
		<servlet-class>org.mifos.application.reports.servlet.ReportTemplateDownloadServlet</servlet-class>
	</servlet>
	<filter>
        <filter-name>DatabaseVersionFilter</filter-name>
        <filter-class>org.mifos.framework.persistence.DatabaseVersionFilter</filter-class>
    </filter>
	<filter>
		<filter-name>loginfilter</filter-name>
		<filter-class>
			org.mifos.framework.security.util.LoginFilter
		</filter-class>
	</filter>
	<filter>
		<filter-name>BirtReportValidationFilter</filter-name>
		<filter-class>
			org.mifos.application.reports.struts.action.BirtReportValidationFilter
		</filter-class>
	</filter>
	
	<servlet-mapping>
        <servlet-name>reportTemplateDownload</servlet-name>
        <url-pattern>/reportTemplateDownload</url-pattern>       
    </servlet-mapping>
	
	<!-- DatabaseVersionFilter should aways be on top -->
	<filter-mapping>
        <filter-name>DatabaseVersionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/developer/*</url-pattern>
		<url-pattern>*.do</url-pattern>
		<url-pattern>/reportTemplateDownload</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>BirtReportValidationFilter</filter-name>
		<url-pattern>/run</url-pattern>
	</filter-mapping>
	<session-config>
	
		<session-timeout>30</session-timeout>
	</session-config>

	<!-- Struts -->
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>
			org.apache.struts.action.ActionServlet
		</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml,/WEB-INF/other-struts-config.xml,/WEB-INF/customer-struts-config.xml,/WEB-INF/reports-struts-config.xml,/WEB-INF/accounts-struts-config.xml,/WEB-INF/productdefinition-struts-config.xml,/WEB-INF/admindocument-struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>convertNull</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<!-- pages/actions which don't go through struts -->
	<servlet>
	    <servlet-name>Dispatcher</servlet-name>
	    <servlet-class>org.mifos.application.ui.Dispatcher</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>Dispatcher</servlet-name>
	    <url-pattern>/developer/*</url-pattern>
	</servlet-mapping>

	<!-- Axis -->
	<servlet>
	  <servlet-name>AxisServlet</servlet-name>
	  <servlet-class>org.apache.axis2.transport.http.AxisServlet</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
	  <servlet-name>AxisServlet</servlet-name>
	  <url-pattern>/services/*</url-pattern>
	</servlet-mapping>

	<listener>
	    <listener-class>org.mifos.framework.ApplicationInitializer</listener-class>
	</listener> 

	<welcome-file-list>
		<welcome-file>
			/pages/application/login/jsp/index.jsp
		</welcome-file>
	</welcome-file-list>
	<!-- Struts Tag Library Descriptors -->

    <taglib>
		<taglib-uri>/tags/struts-bean</taglib-uri>
		<taglib-location>/WEB-INF/tlds/struts-bean.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>/tags/struts-html</taglib-uri>
		<taglib-location>/WEB-INF/tlds/struts-html.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>/tags/struts-logic</taglib-uri>
		<taglib-location>
			/WEB-INF/tlds/struts-logic.tld
		</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>/tags/struts-nested</taglib-uri>
		<taglib-location>
			/WEB-INF/tlds/struts-nested.tld
		</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>/tags/struts-tiles</taglib-uri>
		<taglib-location>
			/WEB-INF/tlds/struts-tiles.tld
		</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>/tags/struts-html-el</taglib-uri>
		<taglib-location>
			/WEB-INF/tlds/struts-html-el.tld
		</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>/tags/custom-menu</taglib-uri>
		<taglib-location>/WEB-INF/tlds/custom-menu.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>/tags/mifos-html</taglib-uri>
		<taglib-location>/WEB-INF/tlds/mifos-html.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>/tags/struts-bean-el</taglib-uri>
		<taglib-location>
			/WEB-INF/tlds/struts-bean-el.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/tags/c</taglib-uri>
		<taglib-location>/WEB-INF/tlds/c.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/tags/date</taglib-uri>
		<taglib-location>
			/WEB-INF/tlds/my-customtags.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/mifos/customtags</taglib-uri>
		<taglib-location>
			/WEB-INF/tlds/mifos-customtags.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/mifos/officetags</taglib-uri>
		<taglib-location>
			/WEB-INF/tlds/application/office/officetags.tld
		</taglib-location>
	</taglib>

	<!-- For M2 -->
	<taglib>
		<taglib-uri>/mifos/custom-tags</taglib-uri>
		<taglib-location>/WEB-INF/tlds/customtags.tld</taglib-location>
	</taglib>
</web-app>
