<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
                            
<hibernate-mapping>

    <class name="org.mifos.application.master.business.TransactionTypeEntity" table="TRANSACTION_TYPE">
        <id name="transactionId" column="TRANSACTION_ID" type="short">
            <generator class="native"/>
        </id>
 		<property name="transactionName" column="TRANSACTION_NAME" type="string" not-null="true" />	  
 		<set name="supportedModesSet" table="SUPPORTED_MODES" cascade="all" order-by="MODE_ID asc" inverse="true">
            <key column="TRANSACTION_ID"/>
            <one-to-many class="org.mifos.application.master.business.SupportedModesEntity"/>
    	</set>  
    </class>
     <query name="getPaymentTypes">
   	       <![CDATA[ from TransactionTypeEntity as trasaction where trasaction.transactionId=:TRANSACTION_ID ]]>
    </query> 
    
</hibernate-mapping>