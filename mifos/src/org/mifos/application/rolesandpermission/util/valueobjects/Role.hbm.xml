<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
 <class name="org.mifos.application.rolesandpermission.util.valueobjects.Role" table="ROLE" >
  <id name="id" type="short" column="ROLE_ID" >
    <generator class="increment" /> 
  </id>
   <version name="versionNo" column="VERSION_NO" type="integer">
               
        </version>
    <property name="name" type="string" column="ROLE_NAME"  /> 
    <property name="description" type="string" column="DESCRIPTION"   /> 
   
    <set name="activities" cascade="all" inverse="true" >
     <key column="ROLE_ID"/>
     <one-to-many class="org.mifos.application.rolesandpermission.util.valueobjects.RoleActivity" /> 
   </set> 
         

 </class>
     <query name="getRoles">
            <![CDATA[ from Role order by ROLE_NAME]]>
    </query>
    
     <query name="getRole">
            <![CDATA[FROM Role WHERE ROLE_NAME =:RoleName]]>
    </query>
  
</hibernate-mapping>
    