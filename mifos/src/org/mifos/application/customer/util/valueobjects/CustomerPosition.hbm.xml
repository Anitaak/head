<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

    <class name="org.mifos.application.customer.util.valueobjects.CustomerPosition" table="CUSTOMER_POSITION">
        <id name="customerPositionId" column="CUSTOMER_POSITION_ID" type="integer" unsaved-value="-1">
                <generator class="native"/>
        </id>
    
      
        
            
      
        <version name="versionNo" column="VERSION_NO" type="integer" unsaved-value="null"/>
        	<property name="customerId" column="CUSTOMER_ID"/>
        	 <property name="positionId" column="POSITION_ID"/>
		 
      
		<many-to-one name="customerPosition" column="CUSTOMER_ID" class="org.mifos.application.customer.util.valueobjects.Customer"  insert="false" update="false"     lazy="true"  />	
		<many-to-one name="parentCustomer" column="PARENT_CUSTOMER_ID" class="org.mifos.application.customer.util.valueobjects.Customer"      lazy="true"  />			
		
    </class>
	<query name="Customer.clientPositions">
	   <![CDATA[from org.mifos.application.customer.util.valueobjects.CustomerPosition as cp where cp.customerPosition.customerId=:CUSTOMER_ID and cp.parentCustomer.customerId=:PARENT_CUSTOMER_ID ]]>
    </query>
</hibernate-mapping>
