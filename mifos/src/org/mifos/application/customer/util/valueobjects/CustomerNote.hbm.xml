<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

    <class name="org.mifos.application.customer.util.valueobjects.CustomerNote" table="CUSTOMER_NOTE">
        <id name="commentId" column="COMMENT_ID" type="integer">
            <generator class="native"/>
        </id>
 
        <property name="commentDate" column="COMMENT_DATE" type="date" />
        <property name="comment" column="COMMENT" type="string" />
        
        <property name="personnelId" column="FIELD_OFFICER_ID" type="short" unique="false" update="true" insert="true" optimistic-lock="true" lazy="false" /> 
        <property name="customerId" column="CUSTOMER_ID"  unique="false" update="true" insert="true" optimistic-lock="true" lazy="false" /> 
        
        <many-to-one  name="customer" column="CUSTOMER_ID" class="org.mifos.application.customer.util.valueobjects.Customer" insert="false" update="false" unique="true" lazy="true"/>
        <many-to-one  name="personnel" column="FIELD_OFFICER_ID" class="org.mifos.application.personnel.util.valueobjects.Personnel" insert="false" update="false" unique="true" lazy="true"/>
        
	
    </class>
    
    <query name="notes.getNotes">
    	   <![CDATA[from org.mifos.application.customer.util.valueobjects.CustomerNote note where note.customer.customerId=:customerId order by note.commentId desc]]>
     </query>

    
</hibernate-mapping>
