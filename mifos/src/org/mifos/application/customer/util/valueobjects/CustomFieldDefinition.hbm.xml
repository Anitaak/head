<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

    <class name="org.mifos.application.customer.util.valueobjects.CustomFieldDefinition" table="CUSTOM_FIELD_DEFINITION">
        <id name="fieldId" column="FIELD_ID" type="short">
            <generator class="native"/>
        </id>
 
        <property name="levelId" column="LEVEL_ID" type="short"  not-null="true" />
        <property name="fieldType" column="FIELD_TYPE" type="short"  not-null="true" />
        <property name="entityType" column="ENTITY_TYPE" type="short"  not-null="true" />
        <property name="mandatoryFlag" column="MANDATORY_FLAG" type="short"  not-null="true" />
 		<property name="defaultValue" column="DEFAULT_VALUE" type="string" />
        <many-to-one name="lookUpEntity" column="ENTITY_ID" class="org.mifos.application.master.util.valueobjects.LookUpEntity"  not-null="true"/>
    </class>
    <!-- This query obtains all the custom fields that have been defined for a particualar level -->
    <query name="masterdata.customercustomfielddefinition"><![CDATA[from CustomFieldDefinition as cfd where cfd.levelId = :levelId and cfd.entityType = :entityType order by cfd.fieldId ]]></query>
    <query name="masterdata.customfielddefinition"><![CDATA[from CustomFieldDefinition as cfd where cfd.entityType = :entityType]]></query>
    <query name="getFieldType"><![CDATA[from CustomFieldDefinition as cfd where cfd.fieldId = :FIELDID]]></query>
</hibernate-mapping>
