<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

    <class name="org.mifos.application.customer.util.valueobjects.CustomerHistoricalData" table="CUSTOMER_HISTORICAL_DATA">
        <id name="historicalId" column="HISTORICAL_ID" >
            <generator class="native"/>
        </id>
     
            
        <version name="versionNo" column="VERSION_NO" type="integer" unsaved-value="null"/>
        
        <property name="productName" column="PRODUCT_NAME" />
        <property name="loanAmount" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="LOAN_AMOUNT_CURRENCY_ID" /> 
			 <column name="LOAN_AMOUNT" />
		</property>
        <property name="totalAmountPaid" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="TOTAL_AMOUNT_PAID_CURRENCY_ID" /> 
			 <column name="TOTAL_AMOUNT_PAID" />
		</property>
        <property name="interestPaid" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="INTEREST_PAID_CURRENCY_ID" /> 
			 <column name="INTEREST_PAID" />
		</property>
        <property name="missedPaymentsCount" column="MISSED_PAYMENTS_COUNT" />
		<property name="totalPaymentsCount" column="TOTAL_PAYMENTS_COUNT" />
		<property name="notes" column="NOTES"    />
		<property name="loanCycleNumber" column="LOAN_CYCLE_NUMBER"  />
		<property name="createdDate" column="CREATED_DATE"  />
		<property name="updatedDate" column="UPDATED_DATE"  />
	        
        
        
        <many-to-one name="customer" column="CUSTOMER_ID" class="org.mifos.application.customer.util.valueobjects.Customer" insert="true" update="true" cascade="none" unique="true" lazy = "true"/>
        <many-to-one name="createdBy" column="CREATED_BY" class="org.mifos.application.personnel.util.valueobjects.Personnel"   unique="true" lazy="true" insert="true" update="true"/>
        <many-to-one name="updatedBy" column="UPDATED_BY" class="org.mifos.application.personnel.util.valueobjects.Personnel"   unique="true" lazy="true" insert="true" update="true"/>
        
        
    </class>
    
     <query name="getHistoricalData">
     
            <![CDATA[ from org.mifos.application.customer.util.valueobjects.CustomerHistoricalData data,org.mifos.application.customer.util.valueobjects.Customer customer where customer.customerId = data.customer.customerId and customer.customerId=:customerId ]]>
     </query>
    
    
</hibernate-mapping>