<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

    <class name="org.mifos.application.customer.business.CustomFieldDefinitionEntity" table="CUSTOM_FIELD_DEFINITION">
        <id name="fieldId" column="FIELD_ID" type="short">
            <generator class="native"/>
        </id>
        <property name="levelId" column="LEVEL_ID" type="short"  not-null="true" />
        <property name="fieldType" column="FIELD_TYPE" type="short"  not-null="true" />
        <property name="entityType" column="ENTITY_TYPE" type="short"  not-null="true" />
        <property name="defaultValue" column="DEFAULT_VALUE" type="string" />
        <property name="mandatoryFlag" column="MANDATORY_FLAG" type="short"  not-null="true" />
        <many-to-one name="lookUpEntity" column="ENTITY_ID" class="org.mifos.application.master.util.valueobjects.LookUpEntity"  not-null="true" lazy="false"/>
    </class>
    <query name="retrieveCustomFields"><![CDATA[from CustomFieldDefinitionEntity as cfd where cfd.entityType = :entityType order by cfd.fieldId]]></query>
</hibernate-mapping>
