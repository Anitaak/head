<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

    <class name="org.mifos.application.accounts.util.valueobjects.AccountActivity" table="ACCOUNT_ACTIVITY">
        <id name="activityId" column="ACTIVITY_ID" type="integer">
            <generator class="native"/>
	    </id>
 
        <property name="activityName" column="ACTIVITY_NAME" type="string"/>
        <property name="personnelId" column="PERSONNEL_ID" type="short"/>
        <property name="principal" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="PRINCIPAL_CURRENCY_ID" /> 
			 <column name="PRINCIPAL" />
		</property>
        <property name="principalOutstanding" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="PRINCIPAL_OUTSTANDING_CURRENCY_ID" /> 
			 <column name="PRINCIPAL_OUTSTANDING" />
		</property>
        <property name="interest" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="INTEREST_CURRENCY_ID" /> 
			 <column name="INTEREST" />
		</property>
        <property name="interestOutstanding" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="INTEREST_OUTSTANDING_CURRENCY_ID" /> 
			 <column name="INTEREST_OUTSTANDING" />
		</property>
        <property name="fee" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="FEE_CURRENCY_ID" /> 
			 <column name="FEE" />
		</property>
        <property name="feeOutstanding" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="FEE_OUTSTANDING_CURRENCY_ID" /> 
			 <column name="FEE_OUTSTANDING" />
		</property>
        <property name="penalty" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="PENALTY_CURRENCY_ID" /> 
			 <column name="PENALTY" />
		</property>
        <property name="penaltyOutstanding" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
			 <column name="PENALTY_OUTSTANDING_CURRENCY_ID" /> 
			 <column name="PENALTY_OUTSTANDING" />
		</property>
        
       <many-to-one name="account" column="ACCOUNT_ID" class="org.mifos.application.accounts.util.valueobjects.Account"/>
         
   </class>
    
</hibernate-mapping>