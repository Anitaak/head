<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

	<class
		name="org.mifos.application.accounts.business.FeesTrxnDetailEntity"
		table="FEE_TRXN_DETAIL" >
		<id name="feesTrxnId" column="FEE_TRXN_DETAIL_ID"
			type="integer">
			<generator class="native" />
		</id>
		<property name="feeAmount" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
		 <column name="FEE_AMOUNT_CURRENCY_ID" /> 
		 <column name="FEE_AMOUNT" />
		</property>
		<many-to-one name="accountFees" column="ACCOUNT_FEE_ID"
			class="org.mifos.application.accounts.business.AccountFeesEntity"
			not-null="true" />
		<many-to-one name="accountTrxn" column="ACCOUNT_TRXN_ID"
			class="org.mifos.application.accounts.business.AccountTrxnEntity"
			not-null="true" />
	</class>
</hibernate-mapping>