<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

	<class	name="org.mifos.application.accounts.business.CustomerActivityEntity" table="CUSTOMER_ACCOUNT_ACTIVITY" >
		<id name="customerActivityId" column="CUSTOMER_ACCOUNT_ACTIVITY_ID"
			type="integer">
			<generator class="native" />
		</id>
		<property name="amount" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
		 <column name="FEE_AMOUNT_CURRENCY_ID" /> 
		 <column name="AMOUNT" />
		</property>
		<property name="description" column="DESCRIPTION"/>
		<property name="createdDate" column="CREATED_DATE"/>
		<many-to-one name="customerAccount" column="ACCOUNT_ID"	class="org.mifos.application.accounts.business.CustomerAccountBO" />
		<many-to-one name="personnel" column="CREATED_BY" class="org.mifos.application.personnel.business.PersonnelBO"
        	cascade="none" update="false" insert="true" unique="true"/>
	</class>
</hibernate-mapping>