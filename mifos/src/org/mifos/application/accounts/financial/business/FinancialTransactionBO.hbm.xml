<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

	<class
		name="org.mifos.application.accounts.financial.business.FinancialTransactionBO"
		table="FINANCIAL_TRXN">
		<id name="trxnId" column="TRXN_ID">
			<generator class="native" />
		</id>

		<property name="actionDate" column="ACTION_DATE" />
		<property name="postedDate" column="POSTED_DATE" />
		<property name="accountingUpdated" column="ACCOUNTING_UPDATED" />
		<property name="notes" column="NOTES" />
		<!-- Debit=0 , Credit=1 -->
		<property name="debitCreditFlag" column="DEBIT_CREDIT_FLAG" />
		<property name="postedAmount" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
		 <column name="POSTED_AMOUNT_CURRENCY_ID" /> 
		 <column name="POSTED_AMOUNT" />
		</property>
		<property name="balanceAmount" type="org.mifos.framework.util.helpers.MoneyCompositeUserType">
		 <column name="BALANCE_AMOUNT_CURRENCY_ID" /> 
		 <column name="BALANCE_AMOUNT" />
		</property>
		<many-to-one name="accountTrxn" column="ACCOUNT_TRXN_ID"
			class="org.mifos.application.accounts.business.AccountTrxnEntity"
			lazy="true" insert="true" update="false" />
		<many-to-one name="relatedFinancialTrxn"
			column="RELATED_FIN_TRXN"
			class="org.mifos.application.accounts.financial.business.FinancialTransactionBO"
			lazy="true" insert="true" update="false" />
		<many-to-one name="financialAction" column="FIN_ACTION_ID"
			class="org.mifos.application.accounts.financial.business.FinancialActionBO"
			lazy="true" insert="true" update="false" />
		<many-to-one name="glcode" column="GLCODE_ID"
			class="org.mifos.application.accounts.financial.business.GLCodeEntity"
			lazy="true" insert="true" update="false" />
		<many-to-one name="postedBy" column="POSTED_BY"
			class="org.mifos.application.personnel.business.PersonnelBO"
			lazy="true" insert="true" update="false" />
		
	</class>


</hibernate-mapping>