<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>

    <class name="org.mifos.application.accounts.loan.business.LoanPerformanceHistoryEntity" table="LOAN_PERF_HISTORY">
        <id name="accountId" column="ACCOUNT_ID" type="integer">
            <generator class="foreign">
	            <param name="property">loan</param>
	        </generator>    
        </id>
        
        <property name="noOfPayments" column="NO_OF_PAYMENTS" />
        <property name="noOfMissedPayments" column="NO_OF_MISSED_PAYMENTS" />
		<property name="daysInArrears" column="DAYS_IN_ARREARS" />
		<property name="loanMaturityDate" column="LOAN_MATURITY_DATE" type="date"/>
        <one-to-one name="loan" class="org.mifos.application.accounts.loan.business.LoanBO" lazy="true" />
    </class>    
    
</hibernate-mapping>