<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://www.springframework.org/schema/beans 
           classpath:xsd/spring-beans-2.5.xsd"> 

    <bean id="configurationLocator"
        class="org.mifos.framework.util.ConfigurationLocator"/>

    <bean id="pathToProperties" factory-bean="configurationLocator"
	   factory-method="getSpringFilePath">
        <constructor-arg value="HibernateTest.properties" />
    </bean>

    <bean id="propertyConfigurer" 
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" ref="pathToProperties"/>
    </bean>

</beans>
